<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encuestas.detalleencuesta"
             Title="detalles"
             >
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
    </Grid.RowDefinitions>
        <StackLayout>
            <Label Text="Nombre"></Label>
            <Entry x:Name="EntNombre" Placeholder="Ingrese nombre"></Entry>
            <Label Text="Fecha Nacimiento"></Label>
            <DatePicker x:Name="DtNac"></DatePicker>
            <Label Text="Equipo favorito"></Label>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label x:Name="LbEquipoFav"></Label>
                <Button x:Name="BtAgregarEq" Text="..."></Button>
            </Grid>
        </StackLayout>
        <Button x:Name="BtnAceptar" Grid.Row="1" Text="Aceptar"             
                ></Button>
    </Grid>
</ContentPage>